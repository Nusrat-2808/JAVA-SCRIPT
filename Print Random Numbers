<body>
    <h2>Let's print some random numbers!</h2>
    <p>Let a random number be <mark id="num"></mark></p>
    <p id="repeat"></p>
    <script>
        var a= Math.floor(Math.random()*100);
        let i=0;
        var text=""
        while(i<a+1){
            text+="The number is "+i+"<br>"
            i++
        }
        document.getElementById("num").innerHTML=a;
        document.getElementById("repeat").innerHTML=text
    </script>
</body>
</html>
